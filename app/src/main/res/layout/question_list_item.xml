<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginBottom="@dimen/small_padding"
	android:layout_marginLeft="@dimen/primary_padding"
	android:layout_marginRight="@dimen/primary_padding"
	android:layout_marginTop="@dimen/small_padding"
	card_view:cardCornerRadius="4dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/primary_padding"
		android:orientation="vertical">

		<TextView
			android:id="@+id/title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceListItem"
			tools:text="Title"/>

		<LinearLayout
			android:id="@+id/answers_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/primary_padding"
			android:orientation="vertical"/>

	</LinearLayout>

</android.support.v7.widget.CardView>
